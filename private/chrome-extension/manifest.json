{
  "name": "BrowserTest",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Records your actions into a selenium script.",
  "permissions": [
    "storage",
    "webNavigation",
    "history",
    "tabs",
    "*://*/"
  ],
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "BrowserTest"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["foreground.js"]
    }
  ]

}
